---
// BlogPostLayout.astro
// ブログ記事専用のレイアウトコンポーネント
export interface Props {
  title?: string;
}
const { title = 'Blog' } = Astro.props;
---
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="/assets/blog-layout.css" />
    <link rel="stylesheet" href="/assets/blog-markdown.css" />
    <link rel="stylesheet" href="/assets/katex.css" />
  </head>
  <body style="background:#f5f7fa; min-height:100vh;">
  <main class="blog-layout" style="padding-left:1.5rem; padding-right:1.5rem;">
      <slot />
    </main>
  </body>
</html>
